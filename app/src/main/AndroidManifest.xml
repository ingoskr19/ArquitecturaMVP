<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.com.etn.arquitecturamvpbase">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activities.customers.CustomersActivity"></activity>
        <activity android:name=".views.activities.products.DetailActivity" />
        <activity android:name=".views.activities.products.CreateProductActivity" />
        <activity android:name=".views.activities.products.UpdateProductActivity" />
        <activity android:name=".views.activities.products.ProductActivity" />

        <activity android:name=".views.activities.customers.CreateCustomerActvity" />
        <activity android:name=".views.activities.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.customers.PhoneListActivity"></activity>
        <activity android:name=".views.activities.DashBoardActivity">
        </activity>
    </application>

</manifest>