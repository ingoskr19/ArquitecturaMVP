<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.com.etn.arquitecturamvpbase.views.activities.device.CodeReaderActivity">

    <Button
        android:id="@+id/barcode_button_launch"
        android:onClick="launchBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/barcode_button"/>

    <TextView
        android:id="@+id/barcode_result_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIN DATOS"/>
</LinearLayout>
