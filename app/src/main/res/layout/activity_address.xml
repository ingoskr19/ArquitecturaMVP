<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.com.etn.arquitecturamvpbase.views.activities.mapas.AddressActivity">


    <EditText
        android:id="@+id/address_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/address_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/address_findAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/colorOrange"
        ></View>
    <TextView
        android:id="@+id/address_addressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="Address"
        android:textSize="24dp"
        />


</LinearLayout>
